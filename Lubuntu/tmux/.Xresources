! Base16 Macintosh
! Scheme: Rebecca Bettencourt (http://www.kreativekorp.com)

URxvt.scrollBar: false
URxvt*scrollstyle: plain
URxvt.font:     xft:DejaVu Sans Mono for Powerline:size=10:antialias=true
URxvt.boldFont: xft:DejaVu Sans Mono for Powerline:bold:size=10:antialias=true
URxvt*iconFile: /usr/share/icons/Numix-Circle/48/apps/terminal.svg
URxvt.letterSpace: -1
URxvt.perl-ext-common:  ...,font-size


URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007




urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/c800
URxvt*shading: 30


! Numix

*background: #2d2d2d
*foreground: #dedede
! black
 *color0:    #2d2d2d
 *color8:    #dedede
! red
 *color1:    #d64937
 *color9:    #d64937
! green
 *color2:    #d64937
 *color10:   #00ff00
! yellow
 *color3:    #dedede
 *color11:   #dedede
! blue
 *color4:    #d64937
 *color12:   #d64937
! magenta
 *color5:    #ff0000
 *color13:   #dedede
! cyan
 *color6:    #dedede
 *color14:   #dedede
! white
 *color7:    #dedede
 *color15:   #dedede
